<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:context=".QuestionsFragment">
<androidx.cardview.widget.CardView android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation= "vertical"
                 android:gravity="center_vertical"
                 android:layout_centerInParent = "true">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/relativeLayout">
            <ImageView
                    android:id="@+id/image_view_topics_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:clickable="true"
                    android:background="@drawable/attention"
                    android:layout_centerInParent="true" />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/button_lets_do_it"
                    android:layout_marginRight="@dimen/min_horizontal_spacing"
                    android:layout_marginBottom="@dimen/min_horizontal_spacing"
                    android:id="@+id/button_lets_do_it"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/image_view_topics_overlay"
            />
        </RelativeLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:layout_marginTop="10dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center_vertical"
                          android:gravity="center_vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="left"
                        android:text="@string/text_attention"
                        android:textColor="@android:color/white"
                        android:layout_gravity="left"
                        android:padding="8dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/text_view_topics_overlay"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:textSize="15sp"
                        android:text="@string/text_left"
                        android:background="@drawable/text_view_round"
                        android:textColor="#EB7881"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:id="@+id/text_view_question_count"/>

            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/text_input_needed"
                    android:textColor="#7AB8CF"
                    android:padding="8dp"
                    android:id="@+id/text_view_followers_topics_overlay"/>

        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>
